{
	"name": "TextFlow",
	"description": "A chrome extension for translation.",
	"short_name": "TextFlow",
	"version": "1.0.0",
	"manifest_version": 2,
	"background": {
		"scripts": ["background.bundle.js"]
	},
	"browser_action": {
		"default_icon": "static/logo_128.png",
		"deafult_title": "TextFlow"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["main.bundle.js"]
		}
	],
	"icons": {
		"16": "static/logo_16.png",
		"48": "static/logo_48.png",
		"128": "static/logo_128.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
	"web_accessible_resources": ["static/*"],
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"contextMenus"
	]
}
